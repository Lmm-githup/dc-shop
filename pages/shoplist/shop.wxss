.search {
    width: 100%;
    height: 90rpx;
}

.search-input {
    width: 100%;
    height: 56rpx;
    border-radius: 10rpx;
    margin: 0 24rpx;
    background-color: #fff;
}

.input-pp {
    line-height: 56rpx;
    height: 100%;
}

.input {
    padding-left: 30rpx;
    line-height: 56rpx;
    height: 100%;
}

.search-btn {
    background-color: #ddd;
    border-radius: 0 10rpx 10rpx 0;
    padding: 0 20rpx;
}

.shop-one {
    background-color: #fff;
    width: 100%;
    padding: 26rpx 24rpx;
    border-bottom: 1rpx solid #e2e2e2;
    color: #707070;
}

.shop-one:last-child {
    border: 0;
}

.select-area{
  line-height:25px;
  border-right:1px solid #f0f0f0;
  padding-right:10px;
  padding-left:10px;
}

.select-area image{
  width:16px;
  height:12px;
  margin-top:8px;
}

.shop-icon{
  width:12px;
  height:12px;
  vertical-align: middle;
}

.shop-icon-2{
  width:16px;
  height:16px;
  margin-left:-3px;
  vertical-align: middle;
}

.phone-highlight{
  color: rgb(30,71,156);
}

.shop-oper{
  float:left;
  width:33%;
}

.shop-oper-item{
  text-align:center;
}

.right-line{
  border-right:1px solid #f0f0f0;
}

.shop-oper image{
  width:14px;
  height:14px;
  vertical-align: middle;
  margin-right:5px;
}

.fs-sm image{
  width:14px;
  height:14px;
  margin-right:5px;
  vertical-align: middle;
}