.bottom-bar {
    position: fixed;
    bottom: 60rpx;
    left: 4%;
    width: 93%;
    z-index: 1000;
}

.bottom-bar view {
    background: #ff4544;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    border-radius: 50rpx;
    background-image: linear-gradient(to bottom right, #fb8575 , #fc4658);
    font-size: 30rpx;
}

.edit-row {
    background: #fff;
    height: 100rpx;
    border-bottom: 1rpx solid #eeeeee;
    padding: 0 24rpx;
}

.edit-row:first-child {
    border-top: 1rpx solid #eeeeee;
}

.edit-row .row-label {
    margin-right: 24rpx;
    min-width: 140rpx;
}

.get-wechat-address {
    text-align: center;
    background: #09BB07;
    color: #fff;
    padding: 18rpx 0;
    margin: 32rpx 24rpx;
    border-radius: 10rpx;
    display: block;
}

.get-wechat-address:active {
    opacity: .85;
}